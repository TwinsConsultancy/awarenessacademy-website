{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020"],
    "allowJs": true,
    "checkJs": false,
    "skipLibCheck": true,
    "strict": false,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "noEmit": true,
    "types": ["node"]
  },
  "include": [
    "backend/**/*",
    "server.js"
  ],
  "exclude": [
    "node_modules",
    "frontend/**/*",
    "database/**/*",
    "**/*.spec.ts",
    "**/*.test.ts"
  ]
}
